{
	"manifest_version": 2,
	"name": "Blue Dot Replacement",
	"description": "Show a flashing alert icon when an unfocused tab's title changes.",
	"version": "1.3.0",
	"author": "Will Groenendyk",
	"options_ui": {
		"chrome_style": true,
		"page": "options.html",
		"open_in_tab": false
	},
	"background": {
		"persistent": false,
		"scripts": [ "bg.js" ]
	},
	"icons": {
		"16": "img/icon16.png",
		"32": "img/icon32.png",
		"128": "img/icon128.png"
	},
	"web_accessible_resources" : [ "img/alarm.png" ],
	"short_name" : "BDR",
	"permissions": [
		"tabs",
		"storage",
		"https://*/*",
		"http://*/*"
	]
}
